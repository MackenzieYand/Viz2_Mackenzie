  {
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "https://raw.githubusercontent.com/MackenzieYand/Viz2_Mackenzie/blob/main/data/Total.csv"},
    "width": 650,
    "height": 400,
    "params":[
      {
        "name":"Type_selection",
        "bind":{
          "input":"select",
          "options":[null, "Total","School","Futsal","Social","Other"],
          "labels": ["Total","School","Futsal","Social","Other"],
          "name":"Catergory Selection: "
        }
      }
    ],
    "transform": [
      {"filter":"Type_selection == null || datum.Type == Type_selection"}
    ],

    "encoding": {"x": {"field": "Year", "type": "temporal"}},
    "layer": [
      {
        "mark": "line",
        "encoding": {
          "color": {"field": "Type", "type": "nominal","title":"Type"},
          "y": {"field": "Count", "type": "quantitative","title":"Count"},
          "strokeWidth": {"value":3}
        }
      },
      {
        "mark":"point",
        "encoding": {
          "color": {"field": "Type", "type": "nominal"},
          "y": {"field": "Count", "type": "quantitative"},
          "strokeWidth": {"value":6},
          "tooltip":[
            {"field":"Type", "type": "nominal","title":"Type"},
            {"field":"Year","type": "temporal","timeUnit":"year", "title":"Year"},
            {"field":"Count","type":"quantitative"}
          ]
        }
      }
        
      
    ]
  }
  
